<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item> <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/circular_button_background</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center</item> <item name="android:minWidth">0dp</item> <item name="android:minHeight">0dp</item> <item name="android:padding">0dp</item> <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:backgroundTint">#333333</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="CalculatorButton.Number.Large" parent="CalculatorButton.Number">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:textAlignment">center</item> <item name="android:paddingStart">0dp</item> <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="CalculatorButton.Operation" parent="CalculatorButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#388E3C</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
</resources>